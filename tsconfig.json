{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "bin",
    "lib": ["ESNext"],
    "target": "ES2015",
    "module": "CommonJS",
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "compileOnSave": true
}
